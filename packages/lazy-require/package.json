{
  "name": "@salesforce/lazy-require",
  "version": "0.2.2",
  "description": "Lazily load npm packages",
  "repository": "https://github.com/forcedotcom/sfdx-dev-packages",
  "main": "lib/index.js",
  "author": "Salesforce",
  "license": "BSD-3-Clause",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],
  "dependencies": {
    "debug": "^3.2.6",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@salesforce/dev-scripts": "^0.4.2",
    "@salesforce/ts-sinon": "^1.1.2",
    "@types/debug": "^0.0.31",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^27.0.3",
    "eslint-plugin-prefer-arrow": "^1.2.1",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1"
  },
  "scripts": {
    "build": "yarn sfdx-build",
    "clean": "yarn sfdx-clean",
    "clean-all": "yarn sfdx-clean all",
    "compile": "yarn sfdx-compile",
    "docs": "yarn sfdx-docs",
    "format": "prettier --write \"+(src|test)/**/*.+(ts|js|json)\"",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepack": "yarn sfdx-build",
    "test": "yarn sfdx-test"
  }
}
